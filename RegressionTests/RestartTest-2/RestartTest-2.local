#!/bin/bash 

regtest='RestartTest-2'

for X in h5 lbal stat; do
	if [[ ! -e "$regtest.$X.bak" ]]; then
		echo "$regtest.$X.bak does not exist!" 1>&2
		exit
	fi
	cp "$regtest.$X.bak" "$regtest.$X"
done

mpirun -np 4 "$OPAL_EXE_PATH/opal" "$@" "$regtest.in" -restart 4 --commlib mpi --info 3 --warn 0 2>&1

